# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=payhook
DB_PASSWORD=payhook
DB_NAME=payhook
DB_LOGGING=false
DB_POOL_SIZE=10

# Node Environment
NODE_ENV=development

# PayHook Configuration
SKIP_SIGNATURE_VERIFICATION=false
STORE_RAW_PAYLOAD=true
ENABLE_OUTBOX=false

# Provider Secrets (comma-separated for multiple)
MOCK_PROVIDER_SECRETS=test_secret_1,test_secret_2
PAYSTACK_SECRETS=sk_test_xxxxx

# Event Dispatcher
ENABLE_EVENT_LOGGING=true
LOG_LEVEL=info

# API Configuration
API_PORT=3000
API_PREFIX=/api/v1